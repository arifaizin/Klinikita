<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDFE2"
    android:orientation="vertical"
    tools:context="com.klinikita.androidapp.view.chat.ObrolanKlinikita">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_obrolan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll"
        android:layout_margin="10dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/edt_chat_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:focusable="true"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:hint="Type a Message"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="8dp" />
        <Button
            android:id="@+id/im_send"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="4"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/ll"
            android:background="@drawable/button_mod"
            android:focusable="true"
            android:onClick="kirimPesan"
            android:text="Send" />
    </LinearLayout>
</RelativeLayout>
